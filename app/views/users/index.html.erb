<div class="body">
	<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<li><%= "error" %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
   	<div class="container">
   		<p class="notice"><%= notice %></p>
   		<div class="row">
   			<div class="col-md-3">
   				<h2>index User info</h2>
   				<table class="table">
   					<tbody>
   						<tr><%= attachment_image_tag current_user,:profile_image, :fill, 100, 100,class:"img-circle pull-left profile-thumb", fallback: "box.jpg" %></tr>
    					<tr>
    						<th>name</th>
    						<th><%= current_user.name %></th>
    					</tr>
    					<tr>
    						<th>introduction</th>
    						<th><%= current_user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<div  role="group">
					<%= link_to "", edit_user_path(@user),  class: "btn btn-default btn-block active", class: "col-md-12 btn btn-default glyphicon glyphicon-wrench" %>
					</div>
				</div>
				
				<h2>New Book</h2>
				<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title %>
				<h4>Opinion</h4>
				<%= f.text_area :body %><br>
				<%= f.submit 'Update Book' %>
				<% end %>				
			</div>
			<div class="col-md-9">
				<h2>Users</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |u| %>
						<tr>
							<th><%= attachment_image_tag u,:profile_image, :fill, 40, 40,class:"img-circle pull-left profile-thumb", fallback: "box.jpg" %></th>
							
							<th><%= u.name %></th>
							<td><%= link_to "Show", user_path(u.id) %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
