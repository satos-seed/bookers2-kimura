<div class="body">
	<% if @book.errors.any? %>
	<div id="error_explanation">
		<h3>
			<%= @book.errors.count %>error prohibited this obj from being saved:
		</h3>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<li><%= "error" %></li>
		   	<% end %>
		</ul>
	</div>
	<% end %>
   	<div class="container">
   		<p class="notice">
   			<%= notice %>
   		</p>
   		<div class="row">
   			<div class="col-md-3">
   				<h2>show User info</h2>
   				<table class="table">
   					<tbody>
   						<tr><%= attachment_image_tag @users,:profile_image, :fill,  100, 100,class: "img-circle pull-left profile-thumb", fallback: "box.jpg" %>
   						</tr>
    					<tr>
    						<th>name</th>
    						<th><%= @users.name %></th>
    					</tr>
    					<tr>
    						<th>introduction</th>
    						<th><%= @users.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<div role="group">
						
						<%= link_to "", edit_user_path(@users),  class: "btn btn-default btn-block active", class: "col-md-12 btn btn-default glyphicon glyphicon-wrench" %>
						
						
					</div><br>
				</div>
				<h2>New Book</h2>
				<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title %>
				<h4>Opinion</h4>
				<%= f.text_area :body %><br>
				<%= f.submit 'Update Book' %>
				<% end %>
			</div>

			<div class="col-md-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<% @books.each do |b| %>
					<tbody>
						<tr>
							<th><%= attachment_image_tag @users,:profile_image, :fill, 50, 50, class: "img-circle pull-left profile-thumb", fallback: "box.jpg" %>
								
							</th>
							<th><%= link_to b.title, book_path(b.id) %></th>
							<th><%= b.body %></th>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
