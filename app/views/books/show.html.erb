<div class="body">
	<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<li><%= "error" %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
   	<div class="container">
   		<p class="notice">
   			<%= notice %>
   		</p>
   		<div class="row">
   			<div class="col-md-3">
   				<h2>show User info</h2>
   				<table class="table">
   					<tbody>
   						<tr>
   							<%= attachment_image_tag @users,:profile_image, :fill,  100, 100,class: "img-circle pull-left profile-thumb", fallback: "box.jpg" %>
   						</tr>
    					<tr>
    						<th>name</th>
    						<th><%= @users.name %></th>
    					</tr>
    					<tr>
    						<th>introduction</th>
    						<th><%= @users.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<div  role="group">
						<%= link_to "", edit_user_path(@user.id), class: "btn btn-default btn-block active", class: "col-md-12 btn btn-default glyphicon glyphicon-wrench" %>
						</div><br>
				</div>

				<h2>New Book</h2>
				<%= form_for(@books) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title %>
				<h4>Opinion</h4>
				<%= f.text_area :body %><br>
				<%= f.submit 'Update Book' %>
				<% end %>
				
			</div>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				
				<table class="table table-hover table-inverse">
					<tbody>
						<tr>
							<td><%= attachment_image_tag @users,:profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "box.jpg" %><br>
								<%= link_to @users.name, user_path(@users.id) %>
							</td>

							<td><%= link_to @book.title, book_path(@book.id) %></td>
							<td><%= @book.body %></td>
							<% if @book.user == current_user %>
							<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
							<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
				
			</div>
		</div>
	</div>
</div>
