<div class="body">
	<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<li><%= "error" %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="container">
		<p id="notice"></p>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
  				<h1>Editing Book</h1>
				<%= form_for(@book)do |f| %>
				<div class="field row">
					<label for="book_title">Title</label><br>
					<%=f.text_field :title%><br>
				</div>
				<div class="field row">
					<label for="book_body">Opinion</label><br>
					<%= f.text_area :body %><br>
				<%= f.submit 'Update Book' %><br>
				<td><%= link_to"Show", book_path(@book.id) %></td>
				<td><%= link_to"Back", books_path %></td>
				<% end %>
			</div>
		</div>
	</div>
</div>

